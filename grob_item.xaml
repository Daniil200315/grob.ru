                    <Button Clicked="ButtonClickLipa" Text="20000 ₽" FontSize="20" FontAttributes="Bold" BorderWidth="2" BorderColor="Black" CornerRadius="300" BackgroundColor=" white" WidthRequest="100" HeightRequest="50" HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
            </Frame>

                <Button Clicked="ButtonClickKorz" Text="Оплатить" FontSize="20" FontAttributes="Bold" BorderWidth="2" BorderColor="Black" CornerRadius="300" BackgroundColor=" white" WidthRequest="160" HeightRequest="50" HorizontalOptions="CenterAndExpand" Margin="0, 50, 0, 0"/>
            
        </StackLayout>

            <BoxView></BoxView>

        </StackLayout>
