            </Frame>

            <Frame BorderColor="Black" VerticalOptions="FillAndExpand"  HorizontalOptions="FillAndExpand" HasShadow="True">
                <StackLayout>
                    <Label Text="Гроб липа 190х50" TextColor="Black" FontSize="20" FontAttributes="Bold"/>
