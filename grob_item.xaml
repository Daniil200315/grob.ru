            </StackLayout>

            <BoxView HeightRequest="2" WidthRequest="60" Color="Black" VerticalOptions="CenterAndExpand"  HorizontalOptions="CenterAndExpand"/>

        </StackLayout>

        <StackLayout>

            <Frame BorderColor="Black" VerticalOptions="FillAndExpand"  HorizontalOptions="FillAndExpand" HasShadow="True">
                <StackLayout>
                    <Label Text="Гроб дуб 190х50" TextColor="Black" FontSize="20" FontAttributes="Bold"/>
                        <Image Source="https://img.freepik.com/premium-photo/coffin-made-of-wood-isolated-on-a-white-background_524291-711.jpg"  Aspect="AspectFit" HeightRequest="170" WidthRequest="250"/>
